# LINE LIFF Configuration
LINE_CHANNEL_ID=your_line_channel_id_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_LIFF_ID=your_liff_id_here

# JWT Configuration
JWT_SECRET=your_strong_jwt_secret_key_here
JWT_EXPIRES_IN=5m

# Server Configuration
PORT=3000
NODE_ENV=production

# Dify Chat Configuration
DIFY_CHAT_URL=https://udify.app/chatbot/xxxx

# Database Configuration (Example for payment status check)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=liff_auth
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://line.me,https://liff.line.me

# Logging
LOG_LEVEL=info